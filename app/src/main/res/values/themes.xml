<resources>
    <!-- Base application theme. -->
    <style name="Theme.TestCFT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ivory</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/ivory</item>
        <item name="android:textColorHintInverse">@color/ivory</item>
    </style>
    
    <style name="CardTextStyle">
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>